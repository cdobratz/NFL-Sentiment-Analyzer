# ============================================
# REQUIRED CONFIGURATION
# ============================================

# MongoDB Configuration (REQUIRED)
# Format: mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/
MONGODB_URL=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/
DATABASE_NAME=nfl_sentiment

# Authentication Configuration (REQUIRED)
# Generate a secure SECRET_KEY using: openssl rand -hex 32
SECRET_KEY=<GENERATE_WITH_openssl_rand_hex_32>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Redis Configuration (Optional - defaults to localhost if not set)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External API Keys (Optional - required for specific features)
# Twitter API for social media sentiment ingestion
TWITTER_BEARER_TOKEN=
# ESPN API for game data and stats
ESPN_API_KEY=
# Betting line integrations
DRAFTKINGS_API_KEY=
MGM_API_KEY=

# MLOps Configuration (Optional - required for ML features)
# HuggingFace for model hosting
HUGGINGFACE_TOKEN=
# Hopsworks for feature store
HOPSWORKS_API_KEY=
HOPSWORKS_PROJECT=nfl-sentiment-analyzer
HOPSWORKS_HOST=https://c.app.hopsworks.ai
# Weights & Biases for experiment tracking
WANDB_API_KEY=
WANDB_PROJECT=nfl-sentiment-analyzer
WANDB_ENTITY=

# Environment Configuration
# Set to 'production', 'staging', or 'development'
ENVIRONMENT=development
DEBUG=False

# Monitoring (Optional)
SENTRY_DSN=

# CORS Configuration (Optional)
# Comma-separated list of allowed origins. Wildcard '*' only allowed in development.
# Example: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Docker-specific Configuration (Only needed when using Docker Compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=<CHANGE_IN_PRODUCTION>
GRAFANA_PASSWORD=<CHANGE_IN_PRODUCTION>

# Rate Limiting (Optional - uses defaults if not set)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Model Storage Directories (Optional - uses defaults if not set)
MODELS_DIR=./models
DEPLOYMENTS_DIR=./deployments
