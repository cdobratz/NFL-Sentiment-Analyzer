[flake8]
max-line-length = 88
extend-ignore = E203, E501, F811, F541, E402
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .pytest_cache,
    *.egg-info
per-file-ignores =
    __init__.py:F401,F811
    */migrations/*:E501,F401
    */tests/*:F401,F841,F811
    */scripts/*:E402,F401,F841