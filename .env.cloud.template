# Cloud Deployment Environment Variables Template
# Copy this file to .env.production and fill in the values

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# Server Configuration
PORT=8000
WORKERS=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Database Configuration
# For Render: Use managed PostgreSQL/MongoDB service connection strings
# For Railway: Use Railway's database plugins
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/nfl_sentiment?retryWrites=true&w=majority
REDIS_URL=redis://username:password@redis-host:port/0

# Database Settings
MONGO_DATABASE_NAME=nfl_sentiment
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# Cache Settings  
REDIS_PASSWORD=your_secure_redis_password
CACHE_TTL=3600

# Authentication & Security
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
API_RATE_LIMIT_PER_MINUTE=100
API_MAX_CONTENT_LENGTH=10485760  # 10MB

# CORS Settings
CORS_ORIGINS=https://your-frontend-domain.com,https://your-frontend-domain.onrender.com
CORS_ALLOW_CREDENTIALS=true

# MLOps Integration (Optional)
WANDB_API_KEY=your_wandb_api_key_here
HOPSWORKS_API_KEY=your_hopsworks_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Social Media API Keys (for data ingestion)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=.json,.csv,.txt

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ML_TRAINING=false  # Disable in production for cost savings